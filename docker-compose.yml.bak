
networks:
  ollama_network:

services:
  ollama:
    image: ollama/ollama
    container_name: ollama
    restart: unless-stopped
    security_opt:
      - no-new-privileges
    cap_drop:
      - ALL
    cap_add:
      - SYS_NICE
    deploy:
      resources:
        reservations:
          devices:
            - capabilities: [gpu] 
        limits:
          memory: 16g
          cpus: '12'
    read_only: true
    volumes:
      - ollama:/root/.ollama
    ports:
      - "11434:11434"
    environment:
      - NVIDIA_VISIBLE_DEVICES=all
      - NVIDIA_DRIVER_CAPABILITIES=compute,utility
      - OLLAMA_CUDA_MEMORY=8GB
      - OLLAMA_NUM_GPU_LAYERS=80
    networks:
      - ollama_network      
        #    runtime: nvidia   

  open-webui:
    image: ghcr.io/open-webui/open-webui:main
    container_name: open-webui
    restart: unless-stopped
    depends_on:
      - ollama
    ports:
      - "3000:3000"
      - "8080:8080"
    volumes:
      - open-webui:/app/backend/data
    environment:
      - OLLAMA_BASE_URL=http://ollama:11434
    networks:
      - ollama_network    

volumes:
  ollama:
  open-webui:
